<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>SiteSelector</servlet-name>
        <servlet-class>SiteSelector</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResponseStatus</servlet-name>
        <servlet-class>ResponseStatus</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Buffering</servlet-name>
        <servlet-class>Buffering</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WrongDestination</servlet-name>
        <servlet-class>WrongDestination</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SiteSelector</servlet-name>
        <url-pattern>/SiteSelector</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResponseStatus</servlet-name>
        <url-pattern>/ResponseStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Buffering</servlet-name>
        <url-pattern>/Buffering</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WrongDestination</servlet-name>
        <url-pattern>/WrongDestination</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
