<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>Login Demo Using j_security_check</display-name>
    <!--Defines Security Constraint -->
    <servlet>
        <servlet-name>booklist</servlet-name>
        <servlet-class>booklist</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginValidate</servlet-name>
        <servlet-class>loginValidate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>booklist</servlet-name>
        <url-pattern>/booklist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginValidate</servlet-name>
        <url-pattern>/loginValidate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
</web-app>
